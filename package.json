{
	"name": "wordnik-api",
	"version": "1.0.0",
	"main": "dist/main.js",
	"type": "module",
	"scripts": {
		"postinstall": "husky",
		"format": "prettier -w .",
		"package": "run build && companion-module-build",
		"build": "rimraf dist && run build:main",
		"build:main": "tsc -p tsconfig.build.json",
		"dev": "tsc -p tsconfig.build.json --watch",
		"lint:raw": "eslint",
		"lint": "run lint:raw ."
	},
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-wordnik-api.git"
	},
	"engines": {
		"node": "^22.17",
		"yarn": "^4"
	},
	"dependencies": {
		"@companion-module/base": "~1.12.1",
		"axios": "^1.11.0",
		"flat": "^6.0.1",
		"lodash": "^4.17.21",
		"p-queue": "^8.1.0",
		"zod": "^4.0.17"
	},
	"devDependencies": {
		"@companion-module/tools": "^2.3.0",
		"@types/lodash": "^4.17.20",
		"@types/node": "^22.17.2",
		"eslint": "^9.33.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.1.5",
		"prettier": "^3.6.2",
		"rimraf": "^6.0.1",
		"typescript": "~5.9.2",
		"typescript-eslint": "^8.39.1"
	},
	"prettier": "@companion-module/tools/.prettierrc.json",
	"lint-staged": {
		"*.{css,json,md,scss}": [
			"prettier --write"
		],
		"*.{ts,tsx,js,jsx}": [
			"yarn lint:raw --fix"
		]
	},
	"packageManager": "yarn@4.9.2"
}
